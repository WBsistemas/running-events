// Colors
$primary = #3b82f6 // blue-500 in Tailwind
$secondary = #6366f1 // indigo-500 in Tailwind
$accent = #8b5cf6 // violet-500 in Tailwind
$success = #10b981 // emerald-500 in Tailwind
$warning = #f59e0b // amber-500 in Tailwind
$error = #ef4444 // red-500 in Tailwind
$info = #06b6d4 // cyan-500 in Tailwind
$background = #f8fafc // slate-50 in Tailwind
$foreground = #1e293b // slate-800 in Tailwind
$muted = #94a3b8 // slate-400 in Tailwind

// Fonts
$fontSans = ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"
$fontMono = ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace

// Spacing
$spacing1 = 0.25rem // 4px
$spacing2 = 0.5rem // 8px
$spacing3 = 0.75rem // 12px
$spacing4 = 1rem // 16px
$spacing5 = 1.25rem // 20px
$spacing6 = 1.5rem // 24px
$spacing8 = 2rem // 32px
$spacing10 = 2.5rem // 40px
$spacing12 = 3rem // 48px
$spacing16 = 4rem // 64px
$spacing20 = 5rem // 80px
$spacing24 = 6rem // 96px

// Breakpoints
$breakpointSm = 640px
$breakpointMd = 768px
$breakpointLg = 1024px
$breakpointXl = 1280px
$breakpoint2xl = 1536px

// Borders
$borderRadius = 0.25rem
$borderRadiusMd = 0.375rem
$borderRadiusLg = 0.5rem
$borderRadiusFull = 9999px

// Shadows
$shadowSm = 0 1px 2px 0 rgba(0, 0, 0, 0.05)
$shadow = 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)
$shadowMd = 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)
$shadowLg = 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)
$shadowXl = 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)

// Transitions
$transitionAll = all 0.15s ease
$transitionColors = background-color, border-color, color, fill, stroke 0.15s ease
$transitionOpacity = opacity 0.15s ease
$transitionShadow = box-shadow 0.15s ease
$transitionTransform = transform 0.15s ease

// Z-index
$zIndex10 = 10
$zIndex20 = 20
$zIndex30 = 30
$zIndex40 = 40
$zIndex50 = 50
$zIndex100 = 100 